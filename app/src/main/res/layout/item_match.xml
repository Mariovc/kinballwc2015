<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchTitleTV"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="4dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchCourtTV"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="center"
                android:layout_toRightOf="@+id/matchTitleTV"
                android:layout_toEndOf="@+id/matchTitleTV"
                android:layout_toLeftOf="@+id/matchDateTV"
                android:layout_toStartOf="@+id/matchDateTV"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchDateTV"
                android:textColor="@color/black"
                android:singleLine="true"
                android:gravity="center"
                android:layout_toLeftOf="@+id/matchHourTV"
                android:layout_toStartOf="@+id/matchHourTV"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchHourTV"
                android:textColor="@color/black"
                android:singleLine="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/team_margin"
                android:layout_marginEnd="@dimen/team_margin">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/team1_color"
                    android:gravity="center"
                    android:textColor="@color/team1_font"
                    android:background="@color/blue_team"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/matches_logo_height"
                    android:id="@+id/matchTeam1LogoIV"
                    android:layout_marginLeft="@dimen/matches_logo_margin"
                    android:layout_marginStart="@dimen/matches_logo_margin"
                    android:layout_marginRight="@dimen/matches_logo_margin"
                    android:layout_marginEnd="@dimen/matches_logo_margin"
                    android:layout_marginTop="@dimen/matches_logo_margin_top" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam1NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/team_margin"
                android:layout_marginLeft="@dimen/team_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/team2_color"
                    android:gravity="center"
                    android:textColor="@color/team2_font"
                    android:background="@color/grey_team"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/matches_logo_height"
                    android:id="@+id/matchTeam2LogoIV"
                    android:layout_marginLeft="@dimen/matches_logo_margin"
                    android:layout_marginStart="@dimen/matches_logo_margin"
                    android:layout_marginRight="@dimen/matches_logo_margin"
                    android:layout_marginEnd="@dimen/matches_logo_margin"
                    android:layout_marginTop="@dimen/matches_logo_margin_top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam2NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/team_margin"
                android:layout_marginStart="@dimen/team_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/team3_color"
                    android:gravity="center"
                    android:textColor="@color/team3_font"
                    android:background="@color/black_team"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/matches_logo_height"
                    android:id="@+id/matchTeam3LogoIV"
                    android:layout_marginLeft="@dimen/matches_logo_margin"
                    android:layout_marginStart="@dimen/matches_logo_margin"
                    android:layout_marginRight="@dimen/matches_logo_margin"
                    android:layout_marginEnd="@dimen/matches_logo_margin"
                    android:layout_marginTop="@dimen/matches_logo_margin_top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam3NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:gravity="center_horizontal" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/live_text"
        android:id="@+id/matchLiveTV"
        android:textColor="@color/live_font"
        android:textSize="@dimen/live_text_size"
        android:layout_margin="2dp"
        android:paddingLeft="@dimen/live_lateral_padding"
        android:paddingRight="@dimen/live_lateral_padding"
        android:background="@drawable/background_live"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:visibility="invisible" />

</RelativeLayout>