<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="4dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game #1"
                android:id="@+id/matchTitleTV"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/matchLiveTextView"
                android:layout_alignBottom="@+id/matchLiveTextView"
                android:singleLine="true"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• live"
                android:id="@+id/matchLiveTV"
                android:textColor="@color/live_font"
                android:layout_margin="2dp"
                android:background="@drawable/background_live"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18/08 11:45"
                android:id="@+id/matchDateTV"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/matchLiveTV"
                android:layout_alignBottom="@+id/matchLiveTV"
                android:singleLine="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/team_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Les Dragons de Montréal"
                    android:id="@+id/matchTeam1NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textColor="@color/team1_font"
                    android:ellipsize="end"
                    android:background="@drawable/background_team1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam1ImageIV"
                    android:src="@drawable/flag_spain"
                    android:layout_marginTop="@dimen/logo_margin_top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:id="@+id/matchTeam1ScoreTextView"
                    android:gravity="center"
                    android:textColor="@color/team1_font"
                    android:layout_marginTop="@dimen/matches_logo_margin_top"
                    android:background="@drawable/background_team1"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/team_margin"
                android:layout_marginLeft="@dimen/team_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A.D. KCB Kin-Ball Team"
                    android:id="@+id/matchTeam2NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textColor="@color/team2_font"
                    android:ellipsize="end"
                    android:background="@drawable/background_team2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam2ImageIV"
                    android:src="@drawable/flag_spain"
                    android:layout_marginTop="@dimen/logo_margin_top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:id="@+id/matchTeam2ScoreTextView"
                    android:gravity="center"
                    android:textColor="@color/team2_font"
                    android:layout_marginTop="@dimen/logo_margin_top"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin"
                    android:background="@drawable/background_team2" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/team_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kin-Ball Hannut Lincent"
                    android:id="@+id/matchTeam3NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textColor="@color/team3_font"
                    android:ellipsize="end"
                    android:background="@drawable/background_team3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam3ImageIV"
                    android:src="@drawable/flag_spain"
                    android:layout_marginTop="@dimen/logo_margin_top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/matchTeam3ScoreTextView"
                    android:gravity="center"
                    android:textColor="@color/team3_font"
                    android:layout_marginTop="@dimen/logo_margin_top"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin"
                    android:background="@drawable/background_team3" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>