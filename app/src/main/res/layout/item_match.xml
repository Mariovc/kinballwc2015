<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="4dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchTitleTV"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/matchLiveTV"
                android:layout_alignBottom="@+id/matchLiveTV"
                android:singleLine="true"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live_text"
                android:id="@+id/matchLiveTV"
                android:textColor="@color/live_font"
                android:layout_margin="2dp"
                android:background="@drawable/background_live"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchDateTV"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/matchLiveTV"
                android:layout_alignBottom="@+id/matchLiveTV"
                android:singleLine="true"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_toLeftOf="@+id/matchHourTV"
                android:layout_toStartOf="@+id/matchHourTV"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchHourTV"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/matchLiveTV"
                android:layout_alignBottom="@+id/matchLiveTV"
                android:singleLine="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/team_margin">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/team1_color"
                    android:gravity="center"
                    android:textColor="@color/team1_font"
                    android:background="@color/blue_team"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin" />

                <ImageView
                    android:layout_width="@dimen/matches_logo_height"
                    android:layout_height="@dimen/matches_logo_height"
                    android:id="@+id/matchTeam1LogoIV"
                    android:src="@drawable/placeholder"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/matches_logo_margin_top"
                    android:adjustViewBounds="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam1NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="@dimen/team_margin"
                android:layout_marginLeft="@dimen/team_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/team2_color"
                    android:gravity="center"
                    android:textColor="@color/team2_font"
                    android:background="@color/grey_team"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin" />

                <ImageView
                    android:layout_width="@dimen/matches_logo_height"
                    android:layout_height="@dimen/matches_logo_height"
                    android:id="@+id/matchTeam2LogoIV"
                    android:src="@drawable/placeholder"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/matches_logo_margin_top"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam2NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/team_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/team3_color"
                    android:gravity="center"
                    android:textColor="@color/team3_font"
                    android:background="@color/black_team"
                    android:paddingLeft="@dimen/score_margin"
                    android:paddingRight="@dimen/score_margin" />

                <ImageView
                    android:layout_width="@dimen/matches_logo_height"
                    android:layout_height="@dimen/matches_logo_height"
                    android:id="@+id/matchTeam3LogoIV"
                    android:src="@drawable/placeholder"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/matches_logo_margin_top"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matchTeam3NameTextView"
                    android:textSize="13sp"
                    android:padding="2dp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:gravity="center_horizontal" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>